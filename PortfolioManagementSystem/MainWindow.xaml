<Window x:Class="PortfolioManagementSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PortfolioManagementSystem"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="Sign In" Height="330" Width="572">
    <Grid Margin="0,2,0,-3" OpacityMask="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" 
          >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image x:Name="Image3_jpg" Grid.ColumnSpan="2" Source="Image3.jpg" Stretch="Fill"/>
        <Button x:Name="btnLogIn" Content="Enter" HorizontalAlignment="Left" Margin="188,165,0,0" VerticalAlignment="Top" Width="169" Height="34" Grid.Column="1" Click="OpenPortfolioManagementSystem"/>
        <Label x:Name="label" HorizontalContentAlignment="Center" Content="Welcome" HorizontalAlignment="Left" Margin="180,95,0,0"
               VerticalAlignment="Top" Width="188" FontSize="25" Height="38" Grid.Column="1" FontFamily="Segoe UI Semibold"
               Foreground="AntiqueWhite"/>

    </Grid>
</Window>
